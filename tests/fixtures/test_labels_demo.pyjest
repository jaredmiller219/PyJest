import unittest

from pyjest import describe, test


@describe("Pyjest label discovery (.pyjest)")
class LabelFileTests(unittest.TestCase):
    @test("decorator is picked up in .pyjest module")
    def test_label_from_decorator(self) -> None:
        self.assertTrue(True)

    @test("uses explicit test label instead of method name")
    def test_method_name_is_nonsense_but_label_is_used(self) -> None:
        self.assertTrue(True)


if __name__ == "__main__":
    unittest.main()
